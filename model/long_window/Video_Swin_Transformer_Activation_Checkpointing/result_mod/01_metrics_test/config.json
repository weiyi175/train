{
  "experiment": {
    "name": "videoswin_long_smoke",
    "output_root": "result_mod"
  },
  "data": {
    "npz_path": "/home/user/projects/train/train_data/slipce/windows_dense_npz.npz",
    "split": "long",
    "use_norm": true,
    "temporal_jitter": 2,
    "balance_by_class": true,
    "amplify_hard_negative": false,
    "hard_negative_factor": 1.2,
    "batch_size_micro": 4,
    "accumulation_steps": 32,
    "num_workers": 0,
    "feature_grid": [
      6,
      6
    ],
    "replicate_channels": 3
  },
  "model": {
    "type": "videoswin3d_feature",
    "in_chans": 3,
    "embed_dim": 96,
    "depths": [
      2,
      2,
      6,
      2
    ],
    "num_heads": [
      3,
      6,
      12,
      24
    ],
    "window_size": [
      2,
      7,
      7
    ],
    "mlp_ratio": 4.0,
    "drop_rate": 0.0,
    "attn_drop_rate": 0.0,
    "drop_path_rate": 0.1,
    "num_classes": 2,
    "use_checkpoint": true
  },
  "training": {
    "epochs": 40,
    "lr": 0.0005,
    "weight_decay": 0.0001,
    "betas": [
      0.9,
      0.999
    ],
    "grad_clip": 5.0,
    "label_smoothing": 0.05,
    "use_amp": true,
    "seed": 42,
    "early_stop_patience": 0
  },
  "scheduler": {
    "type": "cosine",
    "warmup_epochs": 5,
    "min_lr": 1e-06
  },
  "checkpointing": {
    "layers_to_ckpt": [
      "stages.0",
      "stages.1",
      "stages.2"
    ]
  },
  "log": {
    "print_freq": 50,
    "val_interval": 1,
    "save_top_k": 1
  },
  "device": "cuda"
}